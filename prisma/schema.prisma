generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  EASY
  MEDIUM
  HARD

  @@map("difficulty")
}

model User {
  id       String @id @default(uuid()) @db.Uuid()
  name     String
  email    String @unique
  password String
  level    Int    @default(1)

  quiz Quiz[]

  @@map("users")
}

model Quiz {
  id          String     @id @default(uuid()) @db.Uuid()
  title       String
  difficulty  Difficulty
  description String?
  experience  Int?
  created_at  DateTime   @default(now())

  question Question[]

  User    User   @relation(fields: [user_id], references: [id])
  user_id String @db.Uuid()

  @@map("quizzes")
}

model Question {
  id          String @id @default(uuid()) @db.Uuid()
  description String
  experience  Int?

  answer Answer[]

  Quiz    Quiz   @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  quiz_id String @db.Uuid()

  @@map("questions")
}

model Answer {
  id        String  @id @default(uuid()) @db.Uuid()
  option    String
  isCorrect Boolean

  Question    Question @relation(fields: [question_id], references: [id], onDelete: Cascade)
  question_id String   @db.Uuid()

  @@map("answers")
}
